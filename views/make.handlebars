<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 jumbotron">
            <form action="/api/makePoll" method="post">
                <div class="form-group row">
                    <label for="example-text-input" class="col-2 col-form-label">Question</label>
                    <div class="col-10">
                        <input class="form-control" type="text" name="question">
                    </div>
                </div>
                <div id="options">
                    <div class="form-group row">
                        <label for="example-text-input" class="col-2 col-form-label">Option 1</label>
                        <div class="col-10">
                            <input class="form-control" type="text" name="options[answer1]">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-2 col-form-label">Option 2</label>
                        <div class="col-10">
                            <input class="form-control" type="text" name="options[answer2]">
                        </div>
                    </div>
                </div>
                <input class="btn btn-primary" style="float:right" type="submit" value="Submit">
            </form>
            <button class="btn btn-default" id="add-option-button" onclick="addOption(3)" style="float:left">Add option</button>
        </div>
    </div>
</div>
